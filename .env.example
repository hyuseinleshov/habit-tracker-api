# Database Configuration
POSTGRES_HOST=your-database-host
POSTGRES_PORT=5432
POSTGRES_USER=habittracker
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=habittracker_db

# Redis Configuration
REDIS_URL=redis://your-redis-host:6379

# JWT Configuration (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-256-bits

# Application Configuration
SPRING_PROFILES_ACTIVE=dev

# Optional: JWT Settings (has defaults)
# JWT_ISSUER=habit-tracker-api
# JWT_EXPIRATION_DURATION=PT10M

# Optional: Refresh Token Settings (has defaults)
# REFRESH_TOKEN_EXPIRATION_DURATION=P7D

# Optional: CORS (comma-separated origin patterns, defaults to http://localhost:*)
# CORS_ALLOWED_ORIGINS=https://your-frontend.com,http://localhost:*

# Optional: Cleanup Schedules (has defaults)
# HABIT_RETENTION_PERIOD=P14D
# USER_RETENTION_PERIOD=P14D
